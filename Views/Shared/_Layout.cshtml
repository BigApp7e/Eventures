<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventures</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eventures.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light custome-app-background">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Eventures</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown" style="@(AppModel.isLogin?"display:block":"display:none")">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Events
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="GetEventsPage">All Events</a></li>
                                <li><a class="dropdown-item" sp-controller="Home" asp-action="GetCreateEventPage" style="@( AppModel.type.Equals("Admin")  ?"display:block":"display:none")">Create Event</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="nav-link active nav-bar-buttons" style="@(AppModel.isLogin?"display:none":"display:block")" aria-current="page" asp-area="" asp-controller="Home" asp-action="GetRegisterPage">Register</a>  <a class="nav-link active nav-bar-buttons" style="@(AppModel.isLogin?"display:none":"display:block")" aria-current="page" asp-area="" asp-controller="Home" asp-action="GetLoginPage">Login</a>  <a class="nav-link active nav-bar-buttons" style="@(AppModel.isLogin?"display:block":"display:none")" aria-current="page" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>

                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="width:100vw; text-align: center;">
        <div class="custome-app-background" style="display: inline-block; width:80vw;">
            &copy; 2023 - Eventures Stoycho Stankov
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
