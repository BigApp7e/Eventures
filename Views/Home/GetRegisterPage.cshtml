@model UserModelDto

<div class="container center-register-container" style="text-align:center; max-width:500px">

    <form asp-controller="Home" asp-action="RegisterNewUser" method="post" class="form-style" enctype="multipart/form-data">
        <h1>Register</h1>
        @if (TempData["msg"] != null)
        {
            <div class="alertMessage">
                @TempData["msg"];
            </div>
        }
        <hr style="border: 3px solid black">
        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">User Name</label>
                <input type="text" class="form-control" id="username" placeholder="Enter user name" asp-for="UserName">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Email</label>
                <input type="text" class="form-control" id="email" placeholder="Enter email" asp-for="Email">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Password</label>
                <input type="text" class="form-control" id="Password" placeholder="Enter Password" asp-for="Password">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Confirm Password</label>
                <input type="text" class="form-control" id="confirm-password" placeholder="Confirm Password" asp-for="ConfirmPassword">
            </div>
        </div>

        <hr style="border: 3px solid black">

        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">First Name</label>
                <input type="text" class="form-control" id="first-name" placeholder="Enter First Name" asp-for="FirstName">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Last Name</label>
                <input type="text" class="form-control" id="last-name" placeholder="Enter Last Name" asp-for="LastName">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">UCN</label>
                <input type="text" class="form-control" id="last-name" placeholder="Universal Citizen Number" asp-for="UniqueCitizenNumber">
            </div>
        </div>

        <hr style="border: 3px solid black">
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary green-button">Register</button>
            </div>
        </div>
    </form>
</div>

