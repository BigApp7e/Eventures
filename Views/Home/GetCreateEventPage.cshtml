@model EventModel

<div class="container center-register-container" style="text-align:center; max-width:500px">

    <form asp-controller="Home" asp-action="CreatenewEvent" method="post" class="form-style" enctype="multipart/form-data">
        <h1>Create Event</h1>
        @if (TempData["msg"] != null)
        {
            <div class="alertMessage">
                @TempData["msg"];
            </div>
        }
        <hr style="border: 3px solid black">
        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control"  asp-for="Name">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Place</label>
                <input type="text" class="form-control" asp-for="Place">
            </div>
        </div>

        <hr style="border: 3px solid black">

        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Start</label>
                <input type="datetime-local" class="form-control" asp-for="StartDate">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">End</label>
                <input type="datetime-local" class="form-control" asp-for="EndDate">
            </div>
        </div>

        <hr style="border: 3px solid black">

        <div class="row">
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Total Tickets</label>
                <input type="text" class="form-control" asp-for="TotalTickets">
            </div>
            <div class="col">
                <label class="bold-style" for="exampleInputEmail1">Price Per Ticket</label>
                <input type="text" class="form-control" asp-for="PricePerTicket">
            </div>
        </div>

        <hr style="border: 3px solid black">
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary green-button">Create Event</button>
            </div>
        </div>
    </form>
</div>

